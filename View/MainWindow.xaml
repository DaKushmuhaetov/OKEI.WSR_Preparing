                                                    <ComboBox.ItemTemplate>
                                                        <DataTemplate>
                                                            <StackPanel>
                                                                <TextBlock>
                                                                    <TextBlock.Text>
                                                                        <MultiBinding StringFormat="{}{0} {1} {2} ">
                                                                            <Binding Path="FirstName"/>
                                                                            <Binding Path="MiddleName"/>
                                                                            <Binding Path="LastName"/>
                                                                        </MultiBinding>
                                                                    </TextBlock.Text>
                                                                </TextBlock>
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </ComboBox.ItemTemplate>
                                                </ComboBox>
                                                <TextBox Template="{StaticResource StandartTextBox}" Name="DemandMinPriceTB"  Text="{Binding Path=SelectedDemand.DemandFilter.MinPrice, UpdateSourceTrigger=Explicit}" Tag="Минимальная цена" Margin="5 0 5 20" Width="500"></TextBox>
                                                <TextBox Template="{StaticResource StandartTextBox}" Name="DemandMaxPriceTB"  Text="{Binding Path=SelectedDemand.DemandFilter.MaxPrice, UpdateSourceTrigger=Explicit}" Tag="Максимальная цена" Margin="5 0 5 20" Width="500"></TextBox>
                                                <TextBox Template="{StaticResource StandartTextBox}" x:Name="DemandMinAreaTB"  Text="{Binding Path=SelectedDemand.DemandFilter.MinArea, UpdateSourceTrigger=Explicit}" Tag="Минимальная площадь" Margin="5 0 5 20"/>
                                                <TextBox Template="{StaticResource StandartTextBox}" x:Name="DemandMaxAreaTB"  Text="{Binding Path=SelectedDemand.DemandFilter.MaxArea, UpdateSourceTrigger=Explicit}" Tag="Максимальная площадь" Margin="5 0 5 20"/>
                                                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                                    <TabControl x:Name="DemandTypesOfEstate" Width="400" Background="White" BorderThickness="0,1,0,0" BorderBrush="AliceBlue" FontFamily="{StaticResource RobotoRegular}" SelectedIndex="{Binding Path=SelectedDemand.EstateTypeID}">
