                                                            <TabItem.Header>Квартира</TabItem.Header>
                                                            <TabItem.Content>
                                                                <StackPanel>
                                                                    <TextBox Template="{StaticResource StandartTextBox}" x:Name="DemandApartmentMinRoomsTB"  Text="{Binding Path=SelectedDemand.DemandFilter.MinRooms, UpdateSourceTrigger=Explicit}" Tag="Минимальное количество комнат" Margin="5 0 5 20"/>
                                                                    <TextBox Template="{StaticResource StandartTextBox}" x:Name="DemandApartmentMaxRoomsTB"  Text="{Binding Path=SelectedDemand.DemandFilter.MaxRooms, UpdateSourceTrigger=Explicit}" Tag="Максимальное количество комнат" Margin="5 0 5 20"/>
                                                                    <TextBox Template="{StaticResource StandartTextBox}" x:Name="DemandApartmentMinFloorTB"  Text="{Binding Path=SelectedDemand.DemandFilter.MinFloor, UpdateSourceTrigger=Explicit}" Tag="Минимальный этаж" Margin="5 0 5 20"/>
                                                                    <TextBox Template="{StaticResource StandartTextBox}" x:Name="DemandApartmentMaxFloorTB" Text="{Binding Path=SelectedDemand.DemandFilter.MaxFloor, UpdateSourceTrigger=Explicit}" Tag="Максимальный этаж" Margin="5 0 5 20"/>
                                                                </StackPanel>
                                                            </TabItem.Content>
                                                        </TabItem>
                                                        <TabItem Template="{StaticResource NavigationTabItem}">
                                                            <TabItem.Header>Дом</TabItem.Header>
                                                            <TabItem.Content>
                                                                <StackPanel>
                                                                    <TextBox Template="{StaticResource StandartTextBox}" x:Name="DemandHouseMinRoomsTB"  Text="{Binding Path=SelectedDemand.DemandFilter.MinRooms, UpdateSourceTrigger=Explicit}" Tag="Минимальное количество комнат" Margin="5 0 5 20"/>
                                                                    <TextBox Template="{StaticResource StandartTextBox}" x:Name="DemandHouseMaxRoomsTB"  Text="{Binding Path=SelectedDemand.DemandFilter.MaxRooms, UpdateSourceTrigger=Explicit}" Tag="Максимальное количество комнат" Margin="5 0 5 20"/>
                                                                    <TextBox Template="{StaticResource StandartTextBox}" x:Name="DemandHouseMinFloorsTB"  Text="{Binding Path=SelectedDemand.DemandFilter.MinFloors, UpdateSourceTrigger=Explicit}" Tag="Минимальное количество этажей" Margin="5 0 5 20"/>
                                                                    <TextBox Template="{StaticResource StandartTextBox}" x:Name="DemandHouseMaxFloorsTB" Text="{Binding Path=SelectedDemand.DemandFilter.MaxFloors, UpdateSourceTrigger=Explicit}" Tag="Максимальное количество этажей" Margin="5 0 5 20"/>
                                                                </StackPanel>
                                                            </TabItem.Content>
                                                        </TabItem>
                                                        <TabItem Template="{StaticResource NavigationTabItem}">
                                                            <TabItem.Header>Земля</TabItem.Header>
                                                            <TabItem.Content>
                                                                <StackPanel>
                                                                </StackPanel>
                                                            </TabItem.Content>
                                                        </TabItem>
                                                    </TabControl>
                                                </StackPanel>
                                            </StackPanel>
                                        </ScrollViewer>
                                    </StackPanel>
                                    <DockPanel Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right">
                                        <Button Template="{StaticResource DangerousButton}" Content="Удалить" Command="{Binding Path=RemoveCommand}" CommandParameter="{Binding SelectedDemand}"/>
                                        <Button Template="{StaticResource StandartButton}" Content="Сохранить" Command="{Binding Path=SaveCommand}">
                                            <Button.CommandParameter>
                                                <MultiBinding Converter="{StaticResource createConverter}">
                                                    <Binding ElementName="DemandClientsCB" Path="SelectedItem"/>
                                                    <Binding ElementName="DemandAgentsCB" Path="SelectedItem"/>
                                                    <Binding ElementName="DemandMinPriceTB" Path="Text"/>
                                                    <Binding ElementName="DemandMaxPriceTB" Path="Text"/>
                                                    <Binding ElementName="DemandMinAreaTB" Path="Text"/>
                                                    <Binding ElementName="DemandMaxAreaTB" Path="Text"/>

                                                    <Binding ElementName="DemandTypesOfEstate" Path="SelectedIndex"/>
                                                    
                                                    <Binding ElementName="DemandApartmentMinRoomsTB" Path="Text"/>
                                                    <Binding ElementName="DemandApartmentMaxRoomsTB" Path="Text"/>
                                                    <Binding ElementName="DemandApartmentMinFloorTB" Path="Text"/>
                                                    <Binding ElementName="DemandApartmentMaxFloorTB" Path="Text"/>

                                                    <Binding ElementName="DemandHouseMinRoomsTB" Path="Text"/>
                                                    <Binding ElementName="DemandHouseMaxRoomsTB" Path="Text"/>
                                                    <Binding ElementName="DemandHouseMinFloorsTB" Path="Text"/>
                                                    <Binding ElementName="DemandHouseMaxFloorsTB" Path="Text"/>
                                                </MultiBinding>
                                            </Button.CommandParameter>
                                        </Button>
                                        <Button Template="{StaticResource PrimaryButton}" Content="Создать" Command="{Binding Path=AddCommand}">
                                            <Button.CommandParameter>
                                                <MultiBinding Converter="{StaticResource createConverter}">
                                                    <Binding ElementName="DemandClientsCB" Path="SelectedItem"/>
                                                    <Binding ElementName="DemandAgentsCB" Path="SelectedItem"/>
                                                    <Binding ElementName="DemandMinPriceTB" Path="Text"/>
                                                    <Binding ElementName="DemandMaxPriceTB" Path="Text"/>
                                                    <Binding ElementName="DemandMinAreaTB" Path="Text"/>
                                                    <Binding ElementName="DemandMaxAreaTB" Path="Text"/>

                                                    <Binding ElementName="DemandTypesOfEstate" Path="SelectedIndex"/>

                                                    <Binding ElementName="DemandApartmentMinRoomsTB" Path="Text"/>
                                                    <Binding ElementName="DemandApartmentMaxRoomsTB" Path="Text"/>
                                                    <Binding ElementName="DemandApartmentMinFloorTB" Path="Text"/>
                                                    <Binding ElementName="DemandApartmentMaxFloorTB" Path="Text"/>

                                                    <Binding ElementName="DemandHouseMinRoomsTB" Path="Text"/>
                                                    <Binding ElementName="DemandHouseMaxRoomsTB" Path="Text"/>
                                                    <Binding ElementName="DemandHouseMinFloorsTB" Path="Text"/>
                                                    <Binding ElementName="DemandHouseMaxFloorsTB" Path="Text"/>
                                                </MultiBinding>
                                            </Button.CommandParameter>
                                        </Button>
                                    </DockPanel>
                                </Grid>
                            </DockPanel>
                        </TabItem.Content>
                    </TabItem>
                    <TabItem Template="{StaticResource NavigationTabItem}" DataContext="{Binding deal}">
                        <TabItem.Header>Сделка</TabItem.Header>
                        <TabItem.Content>
                            <DockPanel Margin="10">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="*"/>
                                        <RowDefinition Height="70"/>
                                    </Grid.RowDefinitions>
                                    <Border BorderBrush="LightGray" BorderThickness="0 0 1 0">
                                        <StackPanel Grid.Column="0">
                                            <ListBox x:Name="DealsCollection" ItemsSource="{Binding Deals}" SelectedItem="{Binding SelectedDeal}" Height="635" BorderThickness="0" Width="587" FontFamily="{StaticResource RobotoRegular}" FontSize="14" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                                                <ListBox.ItemTemplate>
                                                    <DataTemplate>
                                                        <Border BorderBrush="LightSkyBlue" BorderThickness="0, 0.5, 0, 0.5" CornerRadius="3" Width="578">
                                                            <StackPanel Margin="5">
                                                                <TextBlock>
                                                                    <TextBlock.Text>
                                                                        <MultiBinding StringFormat="Покупатель: {0} {1} {2} ">
                                                                            <Binding Path="Demand.Client.FirstName"/>
                                                                            <Binding Path="Demand.Client.MiddleName"/>
                                                                            <Binding Path="Demand.Client.LastName"/>
                                                                        </MultiBinding>
                                                                    </TextBlock.Text>
                                                                </TextBlock>
                                                                <TextBlock>
                                                                    <TextBlock.Text>
                                                                        <MultiBinding StringFormat="Агент: {0} {1} {2} ">
                                                                            <Binding Path="Demand.Agent.FirstName"/>
                                                                            <Binding Path="Demand.Agent.MiddleName"/>
                                                                            <Binding Path="Demand.Agent.LastName"/>
                                                                        </MultiBinding>
                                                                    </TextBlock.Text>
                                                                </TextBlock>
                                                                <TextBlock>
                                                                    <TextBlock.Text>
                                                                        <MultiBinding StringFormat="Продавец: {0} {1} {2} ">
                                                                            <Binding Path="Offer.Client.FirstName"/>
                                                                            <Binding Path="Offer.Client.MiddleName"/>
                                                                            <Binding Path="Offer.Client.LastName"/>
                                                                        </MultiBinding>
                                                                    </TextBlock.Text>
                                                                </TextBlock>
                                                                <TextBlock>
                                                                    <TextBlock.Text>
                                                                        <MultiBinding StringFormat="Агент: {0} {1} {2} ">
                                                                            <Binding Path="Offer.Agent.FirstName"/>
                                                                            <Binding Path="Offer.Agent.MiddleName"/>
                                                                            <Binding Path="Offer.Agent.LastName"/>
                                                                        </MultiBinding>
                                                                    </TextBlock.Text>
                                                                </TextBlock>
                                                                <TextBlock Text="{Binding Path=Offer.Price}"/>
                                                            </StackPanel>
                                                        </Border>
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                            </ListBox>
                                        </StackPanel>
                                    </Border>
                                    <StackPanel Grid.Column="1" Grid.Row="0" VerticalAlignment="Center" HorizontalAlignment="Center" Margin="0 0 0 20" >
                                        <TextBlock FontSize="16" FontFamily="{StaticResource RobotoRegular}" Text="Потребность" Margin="0 0 0 10"/>
                                        <ComboBox x:Name="DealDemandsCB" Background="White" BorderBrush="{StaticResource gray_3}" Height="36" Width="500" Margin="5 0 5 20" FontFamily="{StaticResource RobotoRegular}" FontSize="16" SelectedItem="{Binding Path=SelectedDealDemand, UpdateSourceTrigger=Explicit}" ItemsSource="{Binding Path=DemandsInDeal}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" SelectionChanged="DealDemandsCB_SelectionChanged">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel>
                                                        <TextBlock>
                                                            <TextBlock.Text>
                                                                <MultiBinding StringFormat="{}{0} {1} {2} ">
                                                                    <Binding Path="Client.FirstName"/>
                                                                    <Binding Path="Client.MiddleName"/>
                                                                    <Binding Path="Client.LastName"/>
                                                                </MultiBinding>
                                                            </TextBlock.Text>
                                                        </TextBlock>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                        <TextBlock FontSize="16" FontFamily="{StaticResource RobotoRegular}" Text="Предложение" Margin="0 0 0 10"/>
                                        <ComboBox x:Name="DealOffersCB" Background="White" BorderBrush="{StaticResource gray_3}" Height="36" Width="500" Margin="5 0 5 20" FontFamily="{StaticResource RobotoRegular}" FontSize="16" SelectedItem="{Binding Path=SelectedDealOffer, UpdateSourceTrigger=Explicit}" ItemsSource="{Binding Path=FilteredOffers}" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                                            <ComboBox.ItemTemplate>
                                                <DataTemplate>
                                                    <StackPanel>
                                                        <TextBlock>
                                                            <TextBlock.Text>
                                                                <MultiBinding StringFormat="{}г. {0},  ул. {1}, д. {2}, кв. {3}">
                                                                    <Binding Path="Estate.City"/>
                                                                    <Binding Path="Estate.Street"/>
                                                                    <Binding Path="Estate.HouseNumber"/>
                                                                    <Binding Path="Estate.ApartmentNumber"/>
                                                                </MultiBinding>
                                                            </TextBlock.Text>
                                                        </TextBlock>
                                                    </StackPanel>
                                                </DataTemplate>
                                            </ComboBox.ItemTemplate>
                                        </ComboBox>
                                    </StackPanel>
                                    <DockPanel Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right">
                                        <Button Template="{StaticResource DangerousButton}" Content="Удалить" Command="{Binding Path=RemoveCommand}" CommandParameter="{Binding SelectedDeal}"/>
                                        <Button Template="{StaticResource StandartButton}" Content="Сохранить" Command="{Binding Path=SaveCommand}">
                                            <Button.CommandParameter>
                                                <MultiBinding Converter="{StaticResource createConverter}">
                                                    <Binding ElementName="DealOffersCB" Path="SelectedItem"/>
                                                    <Binding ElementName="DealDemandsCB" Path="SelectedItem"/>
                                                </MultiBinding>
                                            </Button.CommandParameter>
