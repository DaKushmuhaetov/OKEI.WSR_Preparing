                                                                <TextBlock Text="{Binding Path=DemandFilter.MaxPrice, StringFormat=Максимальная цена {0} руб.}"/>
                                                            </StackPanel>
                                                        </Border>
                                                    </DataTemplate>
                                                </ListBox.ItemTemplate>
                                            </ListBox>
                                        </StackPanel>
                                    </Border>
